{{> _flashmsg }}
<div class="container-fluid h-100">
<div class="row h-100">
<div class="container mt-5">
    <div class="card card-body">
        <h2 class="text-center">Edit Payment Card</h2>
        <br>
        <form action="" method="post">
            <div class="form-group">
                <label class="font-italic" for="cardName">Card Name</label>
                <input class="form-control" id="cardName" name="cardName" value="{{card.cardName}}" onblur="initialiseName()"/>
            </div>
            <div class="form-group">
                <div class="row mb-2">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-6 mb-4">
                        <label class="font-italic" for="cardNo">Card Number</label>
                        <input class="form-control" id="cardNo" name="cardNo" maxlength="19" value="{{card.cardNo}}"/>
                    </div>
                    <div class="col-12 col-sm-12 col-md-12 col-lg-6 mb-4">
                        <label class="font-italic" for="ccv">CCV</label>
                        <input type="password" class="form-control" id="ccv" name="ccv" maxlength="4" value="{{card.ccv}}"/>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row mb-2">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-6 mb-4">
                        <label class="font-italic">Expiry Date</label>
                        <input id="datepicker" width="200" name="expiryDate" 
                            value="{{formatDate card.expiryDate 'MM/YYYY'}}" readonly />
                    </div>
                    <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                        <label class="font-italic">Type</label>
                        <br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="Debit" value="Debit" 
                                name="debitCredit" {{radioCheck card.debitCredit "Debit" }}>
                            <label class="form-check-label" for="debit">Debit</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="Credit" value="Credit" 
                                name="debitCredit" {{radioCheck card.debitCredit "Credit" }}>
                            <label class="form-check-label" for="credit">Credit</label>
                        </div>
                    </div>
                </div>
            </div>
            <br>
            <button id="btnSubmit" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>
</div>
</div>

<script>
    $('#datepicker').datepicker({
        format: 'mm/yyyy',
        uiLibrary: 'bootstrap4'
    });
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>