<div class="container-fluid h-100">
<div class="row h-100">
<div class="container mt-5">
    <div class="card card-body">
        <h2 class="text-center">Add Payment Card</h2>
        <br>
        <form action="" method="post">
            <div class="form-group">
                <label class="font-italic" for="cardName">Name on Card</label>
                <input class="form-control" id="cardName" name="cardName" value="{{cardName}}" placeholder="Name on Card" onblur="initialiseName()"/>
            </div>
            <div class="form-group">
                <div class="row mb-2">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-6 mb-4">
                        <label class="font-italic" for="cardNo">Card Number</label>
                        <input class="form-control" id="cardNo" name="cardNo" 
                            maxlength="19" value="{{cardNo}}" placeholder="13 - 19 numeric characters"/>
                    </div>
                    <div class="col-12 col-sm-12 col-md-12 col-lg-6 mb-4">
                        <label class="font-italic" for="ccv">CCV</label>
                        <input type="password" class="form-control" id="ccv" name="ccv" 
                            maxlength="4" value="{{ccv}}" placeholder="3 - 4 numeric characters"/>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row mb-2">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-6 mb-4">
                        <label class="font-italic">Expiry Date</label>
                        <input id="datepicker" width="200" name="expiryDate" readonly />
                    </div>
                    <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                        <label class="font-italic">Type</label>
                        <br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="debit" value="Debit" name="debitCredit" checked>
                            <label class="form-check-label" for="debit">Debit</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="credit" value="Credit" name="debitCredit">
                            <label class="form-check-label" for="credit">Credit</label>
                        </div>
                    </div>
                </div>
            </div>
            <br>
            <button id="btnSubmit" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>
</div>
</div>

<script>
    $('#datepicker').datepicker({
        format: 'mm/yyyy',
        uiLibrary: 'bootstrap4',
        value: moment().format('MM/YYYY'),
        minDate: moment().format('MM/YYYY')
    });
</script>
