<div class="container mt-4 p-4 rounded-lg" style="background-color: #282A35;">
    <form action="" method="post" class="needs-validation" novalidate>
        {{#with data}}
        <input type="hidden" name="tutId" value="{{id}}"> {{!-- Tutorial ID --}}
        {{#if qns}}
        {{#each qns}}
        <div class="container p-4 mb-4 bg-light rounded-lg qn1">
            <div class="row">
                <div class="col d-flex align-items-center mt-2">
                    <h5>Question {{qnOrder}}</h5>
                </div>
            </div>
            <hr class="my-3 border border-dark" />
            <p class="lead">{{question}}</p>
            {{#if qnOption}}
            {{#with qnOption}}
            <fieldset class="form-group row" name="{{qnOrder}}">
                <input type="hidden" name="id" value="{{id}}"> {{!-- Question ID --}}
                <div class="col-10">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="{{id}}" id="option1" value="1">
                        <label class="form-check-label" for="option1">
                            {{ans1}}
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="{{id}}" id="option2" value="2">
                        <label class="form-check-label" for="option2">
                            {{ans2}}
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="{{id}}" id="option3" value="3">
                        <label class="form-check-label" for="option3">
                            {{ans3}}
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="{{id}}" id="option4" value="4" required>
                        <label class="form-check-label" for="option4">
                            {{ans4}}
                        </label>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please choose a valid answer!
                        </div>
                    </div>
                </div>
            </fieldset>
            {{/with}}
            {{else}}
            <fieldset class="form-group row">
                <input type="hidden" name="id" value="{{id}}"> {{!-- Question ID --}}
                <div class="col-10">
                    <label for="ans" class="col-form-label h4">Your Answer:</label>
                    <textarea type="text" class="form-control" id="ans" name="{{id}}" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a valid answer!
                    </div>
                </div>
            </fieldset>
            {{/if}}
        </div>
        {{/each}}
        {{else}}
        <div class="container p-4 mb-4 bg-light rounded-lg qn1">
            <h5 class="mt-1">No questions added.</h5>
        </div>
        {{/if}}
        {{/with}}

        <div class="d-flex justify-content-end submit">
            <button type="submit" class="btn btn-outline-light mb-2">Submit</button>
        </div>
    </form>
</div>

<div class="modal fade" id="warningModal" data-backdrop="static" data-keyboard="false" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Warning</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to exit?
                All your progress will be lost!
            </div>
            <div class="modal-footer">
                <a href="/student/content"><button type="button" class="btn btn-outline-danger">Exit</button></a>
                <button type="button" class="btn btn-outline-success" data-dismiss="modal">Continue</button>
            </div>
        </div>
    </div>
</div>

{{!-- Bootstrap form validation --}}
<script>
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName('needs-validation');
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>