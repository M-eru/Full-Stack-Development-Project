<div class="container mt-4 p-4 rounded-lg" style="background-color: #282A35;">
    <form action="" method="post">
        {{#if mcqqn}}
        {{#each mcqqn}}
        <div class="container p-4 mb-4 bg-light rounded-lg qn1">
            <div class="row">
                <div class="col d-flex align-items-center mt-2">
                    <h5>Question {{id}}</h5>
                </div>
            </div>
            <hr class="my-3 border border-dark" />
            <p class="lead">{{question}}</p>
            <fieldset class="form-group-row">
                {{#with qnOption}}
                <div class="col-10">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="{{id}}" id="option1" value="1">
                        <label class="form-check-label" for="option1">
                            {{ans1}}
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="{{id}}" id="option2" value="2">
                        <label class="form-check-label" for="option2">
                            {{ans2}}
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="{{id}}" id="option3" value="3">
                        <label class="form-check-label" for="option3">
                            {{ans3}}
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="{{id}}" id="option4" value="4">
                        <label class="form-check-label" for="option4">
                            {{ans4}}
                        </label>
                    </div>
                </div>
                {{/with}}
            </fieldset>
        </div>
        {{/each}}
        {{/if}}

        {{#if oeqn}}
        {{#each oeqn}}
        <div class="container p-4 mb-4 bg-light rounded-lg qn1">
            <div class="row">
                <div class="col d-flex align-items-center mt-2">
                    <h5>Question {{id}}</h5>
                </div>
            </div>
            <hr class="my-3 border border-dark" />
            <p class="lead">{{question}}</p>
            <fieldset class="form-group row">
                <div class="col-10">
                    <label for="ans" class="col-form-label h4">Your Answer:</label>
                    <textarea type="text" class="form-control" id="ans" name="{{id}}"></textarea>
                </div>
            </fieldset>
        </div>
        {{/each}}
        {{/if}}

        <div class="d-flex justify-content-end submit">
            <button type="submit" class="btn btn-outline-light mb-2">Submit</button>
        </div>
    </form>
</div>

<div class="modal fade" id="warningModal" data-backdrop="static" data-keyboard="false" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Warning</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to exit?
                All your progress will be lost!
            </div>
            <div class="modal-footer">
                <a href="/student/content"><button type="button" class="btn btn-outline-danger">Exit</button></a>
                <button type="button" class="btn btn-outline-success" data-dismiss="modal">Continue</button>
            </div>
        </div>
    </div>
</div>