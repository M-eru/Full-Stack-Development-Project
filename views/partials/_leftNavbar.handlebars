<div class="col-3 overflow-auto vh-100" style="background-color:#282A35; color: white;">
    {{!-- Search Bar --}}
    <input class="col mt-5" type="text w-100" id="mySearch" onkeyup="myFunction()" placeholder="Search.." title="Type in a category">
    {{!-- List of Children --}}
    <ul id="myMenu">
        {{#each students}}
        <li><a href="/parent/studentProfile/{{id}}">{{name}}</a></li>
        {{/each}}
    </ul>
</div>

