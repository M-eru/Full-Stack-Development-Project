{{> _parentNavBar}}
<div class="container-fluid h-100">
    <div class="row h-100">
        {{> _leftNavbarProgress}}
        {{!-- main content --}}
        <div class="col-8 mt-4 ml-3" style="text-align: justify;">
            <h1>{{student.name}}</h1>
            <hr class="mt-4 mb-4" style="border: 2px solid black; background-color: black;">
            <div class="row">
                <!-- Recently Completed -->
                <div class="col-6 mr-2 ml-4 h-100" style="background-color: #282A35; color: white;">
                    <h3 class="mt-2 mb-4"><u>Tutorial Scores</u></h3>
                    {{#each scoreList}}
                    <div class="container bg-white mt-3 mb-3 pt-2 pb-1 rounded">
                        <h6 style="color: black;">{{tutName}}<span class="float-right">{{score}}</span></h6>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
