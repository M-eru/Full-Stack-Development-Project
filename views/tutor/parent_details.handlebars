{{> _tutorNavBar}}
<div class="container mt-5">
    <table class="table">
        <thead class="thead-dark">
            <tr class="text-center">
                <th scope="col">Student Admin Number</th>
                <th scope="col">Parent Name</th>
                <th scope="col">Signed-up days</th>
                <th scope="col">Total tuition fee</th>
                <th scope="col">Payed? (Y/N)</th>
            </tr>
        </thead>
        <tbody>
            {{#each students}}
            <tr class="text-center">
                <th scope="row">{{admno}}</th>
                <td>{{parentTutor.name}}</td>
                <td>365</td>
                <td>$3650</td>
                {{#if payed}}
                <td>Y</td>
                {{else}}
                <td>N</td>
                {{/if}}
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>