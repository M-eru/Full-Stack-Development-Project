                    <input type="text" class="form-control" id="ans3" name="ans3" value="{{question.qnOption.ans3}}"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a valid answer.
                    </div>
                </div>
                <div class="ans4">
                    <label for="ans4" class="col-form-label h5">Option 4</label>
                    <input type="text" class="form-control" id="ans4" name="ans4" value="{{question.qnOption.ans4}}"
